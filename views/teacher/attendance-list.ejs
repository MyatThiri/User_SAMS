    <script type="text/javascript">
    var major ;
    switch (<%=dept%>) {
      case 1:
        major="it";
        break;
      case 2:
        major="civil";
        break;
      case 3:
        major="ec";
        break;
      case 4:
        major="ep";
        break;
      case 5:
        major="mp";
        break;
      case 6:
        major="mc";
        break;
      default:
        console.log('it');
    }
    console.log('////',major);
    if('<%=list%>' == '0'){
      var cla = '';
    }else {
      var cla ='<%=list[0].class%>'+major;
    }

    console.log(cla.toLowerCase());
    var sts = false;

      function go(name,time) {
        <%for(var h in ca_list.list){%>
            if(time == '<%= ca_list.list[h]%>') sts = true;
        <%}%>
        if(!sts){
          location.href = '/teacher/make/'+cla.toLowerCase()+'?s='+name+'&t='+time;
        }else {
          alert("You already do it");
          sts= false;
        }

      }
    </script>
