            <section class="blog-home section-full">
                <div class="container">

                    <h2 style="padding-left:20px;">Attendance List</h2>
                    <div class="total-blog mt-10">
                        <div class="single-blog text-center row">
                            <div class="col-sm-offset-1 col-sm-10">
                                <div class="blog-head mb-20">
                                    <table>
                                      <thead>
                                        <tr>
                                          <th>Class</th>
                                          <th>Subj</th>
                                          <th>Time</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <%if(list != '0'){%>
                                        <% for(var i= 0; i< list.length; i++){%>
                                          <tr onclick="go('<%=list[i].subj_name%>','<%= list[i].time%>')">
                                            <td><%= list[i].class%></td>
                                            <td><%= list[i].subj_name%></td>
                                            <td id="id<%=i%>"><%= list[i].time%></td>
                                          </tr>
                                          <script type="text/javascript">
                                            switch ('<%=list[i].time%>') {
                                              case "1":
                                                $('#id<%=i%>').html("8:30AM-9:30AM");
                                                break;
                                              case "2":
                                                $('#id<%=i%>').html("9:35AM-10:35AM");
                                                break;
                                              case "3":
                                                $('#id<%=i%>').html("10:40AM-11:40AM");
                                                break;
                                              case "4":
                                                $('#id<%=i%>').html("12:40PM-1:40PM");
                                                break;
                                              case "5":
                                                $('#id<%=i%>').html("1:45PM-2:45PM");
                                                break;
                                              case "6":
                                                $('#id<%=i%>').html("2:50PM-3:50PM");
                                                break;
                                              default:
                                                $('#id<%=i%>').html("somethings wrong");
                                            }
                                          </script>
                                        <%}%>
                                        <%}else{%>
                                          <tr>
                                            <td colspan="3">Data Not Found for today!!</td>
                                          </tr>
                                        <%}%>
                                      </tbody>
                                    </table>
                                    <br>

                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>
